-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:id => "title_header", :class => "hilight('title')"}
        %a{:href => "#{movies_path}?order=title"} Movie Title
      %th Rating
      %th{:id => "release_date_header", :class => "hilight('release_date')"}
        %a{:href => "#{movies_path}?order=release_date"} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
